RewriteEngine On

# CORS Headers
Header always set Access-Control-Allow-Origin "*"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization"

# Handle preflight requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# API Routes
RewriteRule ^health/?$ endpoints/health.php [L]
RewriteRule ^radios/?$ endpoints/radios.php [L]
RewriteRule ^radios/([0-9]+)/?$ endpoints/radios.php [L]
RewriteRule ^radios/([0-9]+)/(click|statistics|report)/?$ endpoints/radios.php [L]
RewriteRule ^upload-logo/?$ endpoints/upload.php [L]
RewriteRule ^external-radios/(.*)$ endpoints/external-radios.php [L]

# Security
<Files "*.php">
    Order allow,deny
    Allow from all
</Files>

<Files "config/*">
    Order deny,allow
    Deny from all
</Files>

<Files "models/*">
    Order deny,allow
    Deny from all
</Files>